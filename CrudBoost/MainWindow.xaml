<Window x:Class="CrudBoost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des personnes" Height="526" Width="765.6">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Margin="0,0,626,0"><Run Language="fr-fr" Text="NOM"/></TextBlock>
            <TextBox x:Name="txtNom" Margin="105,5,63.2,5" Text="" />
            <TextBlock TextWrapping="Wrap" Margin="0,0,626,0"><Run Language="fr-fr" Text="PRENOM"/></TextBlock>
            <TextBox x:Name="txtPrenom" Margin="105,5,63.2,5" Text="" />
            <TextBlock TextWrapping="Wrap" Margin="0,0,626,0"><Run Language="fr-fr" Text="AGE"/></TextBlock>
            <TextBox x:Name="txtAge" Margin="105,5,63.2,5" Text="" />
            <TextBlock TextWrapping="Wrap" Margin="0,0,652,0" Height="18"><Run Language="fr-fr" Text="ADRESSE"/><LineBreak/><Run Language="fr-fr"/><LineBreak/><Run Language="fr-fr"/></TextBlock>
            <TextBox x:Name="txtAdresse" Margin="105,5,63.2,5" Text="" />
            <TextBlock TextWrapping="Wrap" Margin="0,0,626,0"><Run Language="fr-fr" Text="TELEPHONE"/></TextBlock>
            <TextBox x:Name="txtTelephone" Margin="105,5,63.2,5" Text="" />
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Ajouter" Click="Ajouter_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Afficher" Click="Afficher_Click" Width="100"/>
            </StackPanel>
            <ListBox x:Name="listPersons" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
    